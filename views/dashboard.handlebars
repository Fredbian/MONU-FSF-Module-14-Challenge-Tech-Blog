{{#if blogs.length}}
<section>
  <h2>Dashboard</h2>
  <ul class="blog-list">
    {{#each blogs as |blog|}}
    <li>
      {{> dashboard-blog-info blog}}
      <a href="/dashboard/edit/{{blog.id}}" class="edit-link">Edit Blog</a>      
    </li>
    {{/each}}
  </ul>
</section>
{{else}}
<section>
  <h3>You have no blogs yet!</h3>
</section>
{{/if}}

