<section class="add-blog">
    <h2 class="form-header">Create New Blog</h2>
    <form class="add-blog-form">
        <div class="blog-title">
            <label for="blog-title">Title</label>
            <input type="text" id="blog-title" name="blog-title" />
        </div>
        <div class="blog-body">
            <label for="blog-body">Content</label>
            <textarea id="blog-body" name="blog-body"></textarea>
        </div>
        <button type="submit" class="add-btn">Submit</button>
    </form>
</section>

